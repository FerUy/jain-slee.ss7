					<version>${pom.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-library-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>copy-dependencies</goal>
							<goal>generate-descriptor</goal>
						</goals>
					</execution>
				</executions>
				<configuration>					
					<library-name>jcc-provider-library</library-name>
					<library-vendor>org.mobicents.resources.jcc</library-vendor>
					<library-version>1.0</library-version>				
				</configuration>
			</plugin>					
		</plugins>
	</build>

</project>