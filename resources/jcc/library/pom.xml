				<dependency>
					<artifactId>tcap-api</artifactId>
					<groupId>org.mobicents.protocols.ss7.tcap</groupId>
				</dependency>
				<dependency>
					<artifactId>tcap-impl</artifactId>
					<groupId>org.mobicents.protocols.ss7.tcap</groupId>
				</dependency>
			</dependencies>

		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<property>
					<name>platform</name>
					<value>linux</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>javax.csapi.cc</groupId>
					<artifactId>jcc</artifactId>
				</dependency>
				<dependency>
					<artifactId>jcc-native-linux</artifactId>
					<groupId>org.mobicents.resources.jcc</groupId>
					<version>${pom.version}</version>
				</dependency>
				<dependency>
					<artifactId>jcc-camel</artifactId>
					<groupId>org.mobicents.resources.jcc</groupId>
					<version>${pom.version}</version>
				</dependency>
			</dependencies>

		</profile>
		<profile>
			<id>solaris</id>
			<activation>
				<property>
					<name>platform</name>
					<value>solaris</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>javax.csapi.cc</groupId>
					<artifactId>jcc</artifactId>
				</dependency>
				<dependency>
					<artifactId>jcc-native-solaris</artifactId>
					<groupId>org.mobicents.resources.jcc</groupId>
					<version>${pom.version}</version>
